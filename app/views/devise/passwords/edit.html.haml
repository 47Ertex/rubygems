.card
  .card-header
    %h2 Change your password
  .card-body  
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = f.error_notification
      = f.input :reset_password_token, as: :hidden
      = f.full_error :reset_password_token
      .form-inputs
        = f.input :password, label: "Новый пароль", required: true, autofocus: true, hint: ("#{@minimum_password_length} символов минимум" if @minimum_password_length), input_html: { autocomplete: "new-password" }                                          |
        = f.input :password_confirmation, label: "Подтвердить новый пароль", required: true, input_html: { autocomplete: "new-password" }
      .form-actions
        = f.button :submit, "Изменить пароль"
  .card-footer        
    = render "devise/shared/links"
