.card
  .card-header
    .fa.fa-graduation-cap
    = link_to course.title, course_path(course), class: "black_link"
  -if course.avatar.attached?  
    .card-img-top
      .text-center
        =image_tag course.avatar, height: "100%", width: "290px"
        /=image_tag course.avatar.variant(resize_to_limit: [100, 100]) 
  .card-body
    %small=simple_format(course.short_description)
  .card-footer
    .text-center
      =enrollment_button(course)
      =review_button(course)
  .card-footer
    .row
      .col-md-6
        .text-warning.fa.fa-star
        %b= course.average_rating
        /Enrollments count:
        /=course.enrollments.count
        
        /Counter cache enrollments count:
        (
        .fa.fa-user-graduate
        = course.enrollments_count
        )
        .fa.fa-tasks
        =course.lessons.count
      .col-md-6
        .text-right
          .fa.fa-chalkboard-teacher
          by
          =link_to course.user.username, user_path(course.user)
  /.card-footer
  /  .row
  /    .col-md-6
  /      .fa.fa-globe-africa
  /      =course.language
  /    .col-md-6 
  /      .text-right
  /        .fa.fa-signal
  /        =course.level
  /.card-footer
  /  .row
  /    .col-md-6
  /      .far.fa-clock
  /      =course.created_at.strftime('%d-%b-%Y')
  /    .col-md-6
  /      .text-right
  /        .fa.fa-chalkboard-teacher
  /        =link_to course.user.username, user_path(course.user)
  -if current_user        
    -if policy(course).owner?        
      .card-footer
        = link_to 'Add lesson', new_course_lesson_path(course, @lesson), class: 'btn btn-sm btn-primary btn_link'
        = link_to course_course_wizard_index_path(course), class: 'btn btn-sm btn-warning mr-1 btn_link' do
          .fa.fa-edit
        -if policy(course).destroy?
          =link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger btn_link'
        = link_to analytics_course_path(course), class: 'btn btn-sm btn-info btn_link' do
          .fa.fa-chart-bar
          Analytics
    - if policy(course).admin_or_owner?      
      .card-footer
        - if course.published?
          .badge.badge-success published
        - else  
          .badge.badge-danger unpublished
        - if course.approved?
          .badge.badge-success approved
        - else  
          .badge.badge-danger unapproved
    -if policy(course).approve?
      .card-footer
        - if course.approved?
          = link_to 'unapprove', unapprove_course_path(course), method: :patch, class: "btn btn-sm btn-danger btn_link"
        - else
          = link_to 'approve', approve_course_path(course), method: :patch, class: "btn btn-sm btn-success btn_link"
  .card-footer
    - course.tags.each do |tag|
      .badge.badge-info
        = tag.name