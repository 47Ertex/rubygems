.card
  .progress
    .progress-bar{style: "width: #{@progress}%"}
  .card-header
    %h5
      = wizard_steps.index(step) + 1
      \/
      = wizard_steps.count
      =step.to_s.humanize
  .card-body
    = simple_form_for @course, url: course_course_wizard_path, method: :put do |f|
      =f.input :level, collection: Course.levels, include_blank: true, as: :radio_buttons
      =f.input :price, collection: [0, 1, 5, 10, 19, 30, 77, 100], as: :radio_buttons
      =f.input :published
      = f.select :tag_ids, @tags.all.pluck(:name, :id), {}, { multiple: true, class: "selectize-tags"}
      = f.button :submit
  .card-footer
    .float-left
      = link_to previous_wizard_path, class: 'btn btn-sm btn-info btn_link' do
        .fa.fa-arrow-left
        Previous
    .float-right
      = link_to next_wizard_path, class: 'btn btn-sm btn-info btn_link' do
        .fa.fa-arrow-right
        Skip